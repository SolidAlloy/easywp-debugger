DOMAIN = domain.com
DEBUG = 0

MYSQL_SERVER = localhost
MYSQL_DATABASE = database_name
MYSQL_USERNAME = mysql_username
MYSQL_PASSWORD = mysql_password

MAIL_SERVER = localhost
MAIL_PORT = 587
MAIL_USE_TLS = 1
MAIL_USERNAME = admin@domain.com
MAIL_PASSWORD = mail_password
MAIL_DEFAULT_RECIPIENT = recipient@domain2.com

# https://flask-caching.readthedocs.io/en/latest/#built-in-cache-backends
CACHE_TYPE = simple
CACHE_DEFAULT_TIMEOUT = 0

# Can be "bot", "email", or "all"
FAILED_URL_HANDLER = bot

# If the number of jobs in queue is higher than that,
# the app will return "Resource is temporarily busy".
MAX_QUEUE_LENGTH = 240

# Time to wait before removing a debugger file. This will be interpreted as "at now + <given_value>"
# https://tecadmin.net/one-time-task-scheduling-using-at-commad-in-linux/
TIME_TO_DELETE = "2 hours"